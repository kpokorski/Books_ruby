<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :tittle, style: "display: block" %>
    <%= form.text_field :tittle %>
  </div>

  <div>
    <%= form.label :year, style: "display: block" %>
    <%= form.number_field :year %>
  </div>
  <div>
    <%= form.label :ISBN_number, style: "display: block" %>
    <%= form.text_field :ISBN_number %>
  </div>

  <div>
    <%= form.label :publishing_house, style: "display: block" %>
    <%= form.text_field :publishing_house %>
  </div>
  <div>
    <%= form.label :author_id, style: "display: block" %>
    <%= form.number_field :author_id %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>
  <div class="form-group">
    <%if @book.cover.attached?%>
      <%= image_tag url_for(@book.cover), style: "width:200px" %>
    <% end %>
    <%= form.label "Cover" %>
    <%= form.file_field :cover, class: 'form-control' %>

  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
